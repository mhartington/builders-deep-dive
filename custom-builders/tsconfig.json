{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "pretty": true,
    "strict": false,
    "target": "es2017",
    "lib": ["es2017"]
  },
  "include": ["builders/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*.ts", "schematics/*/files"]
}
